{
    "name": "marcuspmd/attr_tools",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
		"yidas/codeigniter-phpunit": "^1.1",
		"fakerphp/faker": "^1.14",
		"squizlabs/php_codesniffer": "^3.6",
		"mockery/mockery": "^1.5",
		"phpstan/phpstan": "^1.8",
		"friendsofphp/php-cs-fixer": "^3.34",
		"phpmd/phpmd": "^2.13"
	},
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Marcuspmd\\AttrTools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Marcus Paulo M Dias",
            "email": "marcusmazzon@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/",
        "phpmd": "phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode"
    }
}
